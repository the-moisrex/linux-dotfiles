#!/usr/bin/env -S nft.sed.devices

define local_network  = { 192.168.88.0/24, 127.0.0.0/8 , 10.1.1.0/24 }
define skip_vpn_mark  = 0xe1f1 # NordVPN default vpn mark used in iproute2
define iptun_mark     = 0xe2f2 # IPIP Tunnel
define public_ipv4    = {
    1.0.0.0-9.255.255.255,
    11.0.0.0-100.63.255.255,
    100.128.0.0-126.255.255.255,
    128.0.0.0-169.253.255.255,
    169.255.0.0-172.15.255.255,
    172.32.0.0-191.255.255.255,
    192.0.1.0/24,
    192.0.3.0-192.88.98.255,
    192.88.100.0-192.167.255.255,
    192.169.0.0-198.17.255.255,
    198.20.0.0-198.51.99.255,
    198.51.101.0-203.0.112.255,
    203.0.114.0-223.255.255.255
}


table inet iptun {
    counter iptun.marked { comment "All packets that marked to be routed to the tunnel" }
    counter iptun.nat { comment "NATed packets" }

    chain marker {
        meta mark $skip_vpn_mark accept
        ip daddr != $public_ipv4 accept
        counter name iptun.marked mark set $iptun_mark
    }

    chain prerouting {
        type filter hook prerouting priority raw
        policy accept

        jump marker
    }

    chain output {
        type route hook output priority raw
        policy accept

        jump marker
    }

    # NAT the marked packets
    chain postrouting {
        type nat hook postrouting priority srcnat

        meta mark $iptun_mark counter name iptun.nat masquerade comment "nat marked packets"
    }
}
