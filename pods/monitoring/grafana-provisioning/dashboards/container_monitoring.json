{
  "dashboard": {
    "id": null,
    "title": "Container Monitoring",
    "tags": ["containers"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{name!=\"\"}[5m]) * 100",
            "legendFormat": "{{name}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "CPU %",
            "format": "percent",
            "logBase": 1
          }
        ]
      },
      {
        "id": 2,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "container_memory_usage_bytes{name!=\"\"}",
            "legendFormat": "{{name}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Memory",
            "format": "bytes",
            "logBase": 1
          }
        ]
      },
      {
        "id": 3,
        "title": "Network I/O",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(container_network_receive_bytes_total{name!=\"\"}[5m])",
            "legendFormat": "RX {{name}}",
            "refId": "A"
          },
          {
            "expr": "rate(container_network_transmit_bytes_total{name!=\"\"}[5m])",
            "legendFormat": "TX {{name}}",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Bytes/sec",
            "format": "Bps",
            "logBase": 1
          }
        ]
      },
      {
        "id": 4,
        "title": "Disk I/O",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(container_fs_reads_bytes_total{name!=\"\"}[5m]) + rate(container_fs_writes_bytes_total{name!=\"\"}[5m])",
            "legendFormat": "{{name}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Bytes/sec",
            "format": "Bps",
            "logBase": 1
          }
        ]
      }
    ],
    "time": {"from": "now-1h", "to": "now"},
    "refresh": "5s",
    "schemaVersion": 12,
    "version": 1
  },
  "folder": "",
  "overwrite": true
}