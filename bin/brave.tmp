#!/bin/bash

if ! command -v brave >/dev/null; then
    echo "Brave is not installed or it's not in the PATH";
    exit 1;
fi

tor_cmds=""
case $1 in
	--tor|tor)
		tor_cmds='--proxy-server="socks5://127.0.0.1:9050" --host-resolver-rules="MAP * ~NOTFOUND , EXCLUDE 127.0.0.1"'
		shift
		;;
esac

dir=$(mktemp -d)
echo "Brave Config Directory: $dir"
eval brave --incognito --user-data-dir="$dir" $tor_cmds $@
rm -rf "$dir"
echo "Brave Config Directory $dir Deleted."
