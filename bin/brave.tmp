#!/bin/bash

if ! command -v brave >/dev/null; then
    echo "Brave is not installed or it's not in the PATH";
    exit 1;
fi

# https://peter.sh/experiments/chromium-command-line-switches/
chromium_default_opts=(
    --no-remote
    # --no-sandbox
    # --single-process
    # --no-zygote
    # --disable-setuid-sandbox
    # --disk-cache-size=1
    # --media-cache-size=1
    # --disk-cache-dir=/dev/null
    --no-first-run
    --no-referrers
    --save-page-as-mhtml
    --no-default-browser-check
    --disable-sync
    --ignore-certificate-errors

    --disable-extensions
    --no-startup-window
    --disable-sync-preferences
    --disable-features=WebRTCUDPMasking
    --disable-webrtc
    --disable-webrtc-hw-encoding
    --disable-webrtc-hw-decoding
    # --incognito
)


tor_cmds=""
case $1 in
	--tor|tor)
        if [ -z "$2" ]; then
            port="9050";
        else
            port="$2";
            shift;
        fi;
        # --host-resolver-rules='MAP * ~NOTFOUND , EXCLUDE 127.0.0.1'
		tor_cmds="--proxy-server=\"socks5://127.0.0.1:$port\""
		shift
		;;
esac

dir=$(mktemp -d)
options="${chromium_default_opts[*]}"
echo "Brave Config Directory: $dir"
brave "$options" --user-data-dir="$dir" "$tor_cmds" "$@"
rm -rf "$dir"
echo "Brave Config Directory $dir Deleted."
wait -n
