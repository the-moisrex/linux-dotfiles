#!/bin/bash

function battery {
    pactl list sinks | grep bluetooth.battery | sed -E 's/.*?"([0-9]+%)".*/\1/'
}

function follow_battery {
    while true; do
        b=$(battery)
        echo -ne "\r$b";
        sleep 3s;
    done
}

case $1 in
    -f|--follow)
        follow_battery;
        ;;
    *)
        battery;
        ;;
esac
